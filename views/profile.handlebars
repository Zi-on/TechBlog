
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

  <div class="col-md-6 project-list">
    <h3>Posts:</h3>

    {{#each posts as |post|}}

<div class="card text-center new-post">
 
  <div class="card-body">
    <h5 class="card-title" id="title">{{post.title}}</h5>
    <p class="card-text" id="body">{{post.body}}</p>
    <a href="#" class="btn-primary deleteBtn" type="button" data-id="{{post.id}}">Delete</a>
    <a href="/edit-post/{{post.id}}" class="btn-primary"" type="submit" >Edit</a>
  </div>
  <div class="card-footer text-muted" id="name">
    created by: {{user.name}}
  </div>
</div>
{{/each}}

<script src="/js/delete.js"></script>