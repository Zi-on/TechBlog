{{#each posts as |post|}}

<div class="card text-center">
 
  <div class="card-body">
    <h5 class="card-title" id="title">{{post.title}}</h5>
    <p class="card-text" id="body">{{post.body}}</p>
  </div>
  <div class="card-footer text-muted" id="name">
    created by: {{post.name}}
  </div>
</div>
{{/each}}


<script src="/js/post.js"></script>
